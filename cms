{# 1. Identify the logged-in user #}
{% set contact_id = request_contact.contact.hs_object_id %}

{# 2. Fetch only Deals associated with this Contact via the 'Subscription' label (ID 18) #}
{# Your data model confirms this is a USER_DEFINED 1-to-many relationship #}
{% set associated_deals = crm_associations(contact_id, "USER_DEFINED", 18) %}
{% set deal_ids = associated_deals.results|map(attribute='id')|join(',') %}

{# 3. Define the properties you need to display #}
{#% set pipeline_id = module.pipeline_id or "default" %#}
{% set props = "dealname,frequency,last_payment_date,next_payment_date,last4,amount,dealstage" %}

{# 4. The 'Where' logic: only fetch if IDs were found #}
{% if deal_ids %}
  {# This query filters the Deals object where the ID is in the user's list #}
  {% set query = "hs_object_id__in=" ~ deal_ids %}
  {% set deals = crm_objects("deal", query, props) %}
{% else %}
  {# Fallback to empty results if no associated 'Subscription' deals exist #}
  {% set deals = { results: [] } %}
{% endif %}
