document.addEventListener('DOMContentLoaded', () => {
  const MAKE_WEBHOOK_URL = '';
  const container = document.querySelector('.donor-portal-wrapper');

  /* =========================
     TOAST
  ========================= */
  function showToast(message, type = 'success') {
    const toast = document.createElement('div');
    toast.style.cssText = `
      position:fixed;
      bottom:20px;
      right:20px;
      padding:15px 25px;
      background:${type === 'error' ? '#dc2626' : '#333'};
      color:#fff;
      border-radius:8px;
      z-index:10000;
      font-family:sans-serif;
    `;
    toast.textContent = message;
    document.body.appendChild(toast);
    setTimeout(() => toast.remove(), 4000);
  }

  /* =========================
     MAKE WEBHOOK
  ========================= */
  async function sendToMake(payload) {
    try {
      const res = await fetch(MAKE_WEBHOOK_URL, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(payload)
      });
      return res.ok;
    } catch (err) {
      console.error('Webhook Error:', err);
      return false;
    }
  }

  /* =========================
     AUTO TRIGGER AFTER PAYMENT
     ?dealId=XXX&action=update
  ========================= */
  const params = new URLSearchParams(window.location.search);
  const urlDealId = params.get('dealId');
  const urlAction = params.get('action');

  if (urlDealId && urlAction) {
    
    const key = `processed_${urlDealId}_${urlAction}`;

    if (!sessionStorage.getItem(key)) {
      sessionStorage.setItem(key, 'true');

      sendToMake({ deal_id: urlDealId, action: urlAction })
        .then((success) => {
          if (success) {
            showToast(`Donation ${urlAction} processed successfully.`);
            window.history.replaceState({}, document.title, window.location.pathname);
          } else {
            showToast(`Failed to process ${urlAction}. Please contact support.`, 'error');
          }
        });
    }
  }

  /* =========================
     PAUSE / CANCEL HANDLER
  ========================= */
  if (container) {
    container.addEventListener('click', async (e) => {
      const btn = e.target.closest('.btn-pause, .btn-cancel');
      if (!btn) return;

      const dealId = btn.dataset.dealId;
      const action = btn.dataset.action;

      if (!confirm(`Are you sure you want to ${action} this subscription?`)) return;

      const originalText = btn.textContent;
      btn.textContent = 'Processing...';
      btn.disabled = true;

      const success = await sendToMake({ deal_id: dealId, action });

      if (success) {
        showToast(`Request to ${action} has been sent.`);
      } else {
        showToast(`Failed to send ${action} request.`, 'error');
      }

      btn.textContent = originalText;
      btn.disabled = false;
    });
  }
});
